---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Others">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Software</div>
  </div>

  <HorizontalCard
    title="Wii HomeBrew Hack"
    img="/other_imgs/homebrew_640x360.jpg"
    desc="Exploiting a bug (buffer overflow) in a Zelda game, it is possible to run your own code on the Nintendo Wii console."
    url="https://www.youtube.com/watch?v=Zmiw2LiMni4"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Catalan Voice Synthesis"
    img="/other_imgs/voicesyn_640x360.jpg"
    desc="Voice synthesis developed using MBROLA to give script rules to concatenate catalan phonemes. Catalan phonemes extracted manually from own recordings."
    url="http://www.xtec.cat/dnee/udc/english/main.html"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Hardware Projects</div>
  </div>

  <HorizontalCard
    title="Converter"
    img="/other_imgs/adapter_640x360.jpg"
    desc="Small circuit that converts signal from RS232 to RJ45 standard"
    url="http://www.xtec.cat/dnee/udc/english/main.html"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="RF Circuit"
    img="/other_imgs/rfconv_640x360.jpg"
    desc="Electronic circuit that can transmit code of 8 bits to a PC"
    url="http://www.xtec.cat/dnee/udc/english/main.html"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Playing Piano</div>
  </div>

  <div class="py-2">
    <text class="text-lg">
      Recordings of myself playing piano
    </text>
  </div>

  <div class="py-2">
    <iframe width="320" height="180" src="https://www.youtube.com/embed/PitlbLlCEOk" title="mompou" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
  </div>




</BaseLayout>
