---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import HorizontalPublications from "../components/HorizontalPublications.astro";
---

<BaseLayout title = "Publications">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Publications</div>
  </div>

  <HorizontalPublications
    img="/post_img.webp"
    title="Grasp oriented Fine-Grained Cloth Segmentation without Real Supervision"
    authors="Ruijie Ren, MG Rajesh, <b>Jordi Sanchez-Riera</b>, Fan Zhang, Yurun Tian, Antonio Agudo,"
    badge="NEW"
    conf="In ICMVA 2023"
  />
  <div class="divider my-0"></div>
  <HorizontalPublications
    img="/post_img.webp"
    title="AVATAR: Blender add-on for fast creation of 3D human models"
    authors="<b>Jordi Sanchez-Riera</b>, Aniol Civit, Marta Altarriba, Francesc Moreno-Noguer"
    conf="In ArXiv 2021"
  />
  <div class="divider my-0"></div>
  <HorizontalPublications
    img="/post_img.webp"
    title="PhysXNet: A Customizable Approach for Learning Cloth Dynamics on Dressed People"
    authors="<b>Jordi Sanchez-Riera</b>, Albert Pumarola, Francesc Moreno-Noguer"
    conf="In 3DV 2021"
  />
  <div class="divider my-0"></div>
  <HorizontalPublications
    img="/post_img.webp"
    title="Integrating human body mocaps into Blender using RGB images"
    authors="<b>Jordi Sanchez-Riera</b>, Francesc Moreno-Noguer"
    conf="In ACHI 2020"
  />
  <div class="divider my-0"></div>
  <HorizontalPublications
    img="/pub_imgs/3dpeople_website.jpg"
    title="3DPeople: Modeling the Geometry of Dressed Humans"
    authors="Albert Pumarola, <b>Jordi Sanchez-Riera</b>, Gary P. T. Choi, Alberto Sanfeliu, Francesc Moreno-Noguer"
    conf="In CVPR 2019"
    project_link="https://cv.iri.upc-csic.es"
    pdf_link="https://openaccess.thecvf.com/content_ICCV_2019/papers/Pumarola_3DPeople_Modeling_the_Geometry_of_Dressed_Humans_ICCV_2019_paper.pdf"
  />

</BaseLayout>
